<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_navigation_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="4dp"
    android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bottom_navigation_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <FrameLayout
                android:id="@+id/linear_home"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                >
                <ImageView
                    android:id="@+id/home"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_home"
                    android:clickable="false"
                    />
                <TextView
                    style="@style/BottomNavigationTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="Home"
                    android:textAllCaps="true" />
                <TextView
                    android:id="@+id/home_notification"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/notification_background"
                    android:elevation="3dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@android:color/white"
                    android:text="5"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/linear_cart"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                >
                <ImageView
                    android:id="@+id/cart"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_shopping_cart"
                    android:clickable="false"
                    />
                <TextView
                    style="@style/BottomNavigationTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="cart"
                    android:textAllCaps="true" />
                <TextView
                    android:id="@+id/cart_notification"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/notification_background"
                    android:elevation="3dp"
                    android:gravity="center"
                    android:visibility="visible"
                    android:textColor="@android:color/white"
                    android:text="2"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/linear_chat"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                >
                <ImageView
                    android:id="@+id/chat"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:src="@drawable/ic_chat_black"
                    android:clickable="false"
                    />
                <TextView
                    style="@style/BottomNavigationTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="Chat"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/chat_notification"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/notification_background"
                    android:elevation="3dp"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@android:color/white"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/linear_account"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                >
                <ImageView
                    android:id="@+id/account"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_person"
                    android:clickable="false"
                    />
                <TextView
                    style="@style/BottomNavigationTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="Account"
                    android:textAllCaps="true" />
                <TextView
                    android:id="@+id/account_notification"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/notification_background"
                    android:elevation="3dp"
                    android:visibility="gone"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="5"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </FrameLayout>
            <FrameLayout
                android:id="@+id/linear_notification"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="?selectableItemBackgroundBorderless"
                android:clickable="true"
                >
                <ImageView
                    android:id="@+id/notification"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_notifications_black"
                    android:clickable="false"
                    />
                <TextView
                    style="@style/BottomNavigationTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="Notification"
                    android:textAllCaps="true" />
                <TextView
                    android:id="@+id/notification_notification"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="12dp"
                    android:background="@drawable/notification_background"
                    android:elevation="3dp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:text="1"
                    android:textSize="8sp"
                    android:textStyle="bold" />
            </FrameLayout>

        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/img_home"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/background_1"
        android:layout_above="@+id/relative"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="84dp"
        />

</RelativeLayout>
